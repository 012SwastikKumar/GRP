<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TransactionDetail">

    <!-- Circular Display Picture -->
    <ImageView
        android:id="@+id/departmentImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_menu_camera"
        android:layout_marginTop="24dp" />

    <!-- Heading -->
    <TextView
        android:id="@+id/headingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/departmentImageView"
        android:layout_centerHorizontal="true"
        android:text="John Doe"
        android:textSize="24sp"
        android:layout_marginTop="16dp" />

    <!-- Subheadings -->
    <TextView
        android:id="@+id/subheading1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headingTextView"
        android:layout_centerHorizontal="true"
        android:text="Subheading 1"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/subheading2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subheading1TextView"
        android:layout_centerHorizontal="true"
        android:text="Subheading 2"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- Text Area for Firebase Data -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subheading2TextView"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/dataTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text=""
            android:textSize="16sp" />
    </ScrollView>

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_menu_camera"
        android:contentDescription="Back Button" />
</RelativeLayout>
